CREATE TABLE EMPLEADO_B(NOMBRE VARCHAR2(20), DEPOSITO FLOAT);
--INSERTAMOS UN REGISTRO
INSERT INTO EMPLEADO_B VALUES('JUAN',7000);

CREATE OR REPLACE TRIGGER ACTUALIZAR_EMPLEADO_B BEFORE UPDATE ON EMPLEADO_B FOR EACH ROW
BEGIN
:NEW.DEPOSITO:=:OLD.DEPOSITO+:NEW.DEPOSITO;
END;
/
UPDATE EMPLEADO_B SET DEPOSITO=2000 WHERE NOMBRE='JUAN';
SELECT * FROM EMPLEADO_B;


