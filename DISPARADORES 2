CREATE TABLE USUARIO_XXX(NOMBRE VARCHAR2(20), EDAD INTEGER);

CREATE OR REPLACE TRIGGER DISP_USUARIO_XXX BEFORE INSERT ON USUARIO_XXX
FOR EACH ROW 
BEGIN
IF :NEW.EDAD < 18 THEN
RAISE_APPLICATION_ERROR(-20001, 'LO SIENTO ERES UN CHIQUITIN');
END IF;
END;
/

INSERT INTO USUARIO_XXX VALUES('JOSE',12);
SELECT * FROM USUARIO_XXX;

CREATE TABLE TODOS(NOMBRE VARCHAR2(20), EDAD INTEGER);
CREATE TABLE MAYORES(NOMBRE VARCHAR2(20), EDAD INTEGER);
CREATE TABLE MENORES(NOMBRE VARCHAR2(20), EDAD INTEGER);

CREATE OR REPLACE TRIGGER DISP_TODOS AFTER INSERT ON TODOS
FOR EACH ROW 
BEGIN
IF :NEW.EDAD <18 THEN
INSERT INTO MENORES VALUES(:NEW.NOMBRE, :NEW.EDAD);
ELSE
INSERT INTO MAYORES VALUES(:NEW.NOMBRE, :NEW.EDAD);
END IF;
END;
/
INSERT INTO TODOS VALUES('JUAN',20);

INSERT INTO TODOS VALUES('ANA',57);


SELECT * FROM MAYORES;
SELECT * FROM MENORES;


